<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Question" />

    <style name="Question.Container">
        <item name="android:background">@color/DesignColorPrimaryBackground</item>
    </style>

    <style name="Question.Toolbar">
        <item name="titleTextColor">@color/DesignColorText</item>
        <item name="android:background">@color/DesignColorSecondaryBackground</item>
        <item name="navigationIcon">@drawable/ic_left_arrow</item>
    </style>

    <style name="Question.Text">
        <item name="android:textColor">@color/DesignColorText</item>
    </style>

    <style name="Question.Text.Capital">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Question.Button">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/DesignColorText</item>
        <item name="android:background">@color/DesignColorButtonPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Question.Indicator">
        <item name="dotsSize">16dp</item>
        <item name="dotsSpacing">4dp</item>
        <item name="dotsWidthFactor">2</item>
        <item name="dotsColor">@color/DesignColorText</item>
        <item name="selectedDotColor">@color/DesignColorText</item>
        <item name="progressMode">true</item>
        <item name="android:gravity">center</item>
    </style>
</resources>